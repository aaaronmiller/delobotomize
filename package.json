{
  "name": "delobotomize",
  "version": "0.1.0-alpha.1",
  "description": "Emergency triage system for mid-project AI disasters. Stop the blind gardener.",
  "keywords": [
    "ai",
    "debugging",
    "context-collapse",
    "code-audit",
    "llm",
    "codebase-analysis",
    "emergency-recovery",
    "cli"
  ],
  "author": "Sliither (from DataKiln project recovery)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/delobotomize.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/delobotomize/issues"
  },
  "homepage": "https://github.com/yourusername/delobotomize#readme",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "delobotomize": "dist/cli/delobotomize.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "phase0": "tsx scripts/phase0-extract.ts",
    "analyze": "tsx scripts/analyze-extraction.ts"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fast-glob": "^3.3.2",
    "glob": "^10.3.10",
    "ora": "^7.0.1",
    "prompts": "^2.4.2",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "esbuild": "^0.25.11",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
